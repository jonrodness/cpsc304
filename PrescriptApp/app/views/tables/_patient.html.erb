<div class = "panel container">

<h2>Patient Options:</h2>

<%= form_tag(qPa1_path, :method=>'post') do %>
 <h3>Update personal information</h3>
  <%= label_tag("pFName", "First Name:") %> 
  <%= text_field_tag "pFName" %> </br>
  <%= label_tag("pLName", "Last Name:") %> 
  <%= text_field_tag "pLName" %> </br>
  <%= label_tag("pAge", "Age:") %> 
  <%= text_field_tag "pAge" %> </br>
  <%= label_tag("pWeight", "Weight:") %> 
  <%= text_field_tag "pWeight" %> </br>
  <%= label_tag("pHeight", "Height:") %> 
  <%= text_field_tag "pHeight" %> </br>
  <%= label_tag("pAddress", "Address:") %> 
  <%= text_field_tag "pAddress" %> </br>
  <%= label_tag("pPhoneNum", "Phone Number:") %> 
  <%= text_field_tag "pPhoneNum" %> </br>
 <p>
  <%= submit_tag 'Submit' %>
 </p>
<% end %>
<br>

<h3>Find pharmacies that are currently open (Weekday)</h3>
<%= button_to "Go!", qPa2_path, :class => "button", :method => :get %>
<br>

<h3>Find pharmacies that are currently open (Weekend)</h3>
<%= button_to "Go!", qPa3_path, :class => "button", :method => :get %>
<br>

<%= form_tag(qPa4_path, :method=>'post') do %>
 <h3>Make an Appointment:</h3>
  <%= label_tag("date", "Date:") %> 
  <%= date_field_tag "date" %> </br>
  <%= label_tag("sTime", "Start Time:") %> 
  <%= time_select "sTime", "test", {minute_step: 30, ampm: true} %> </br>
  <%= label_tag("eTime", "End Time:") %> 
  <%= time_select "eTime", "test", {minute_step: 30, ampm: true} %> </br>
  <%= label_tag("license", "Doctor License:") %> 
  <%= text_field_tag "license" %>
 <p>
  <%= submit_tag 'Submit' %>
 </p>
<% end %>

<%= form_tag(qPa5_path, :method=>'post') do %>
 <h3>Cancel an Appointment:</h3>
