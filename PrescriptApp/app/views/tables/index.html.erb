<div class = "panel container">
<h2>Records:</h2>

<table>
	<thead>
		<tr>
		<% @result.columns.each do |title| %>
			<th><%= title %></th>
		<% end %>
		</tr>
	</thead>

	<tbody>
		<% @result.rows.each do |row| %>
		<tr>
		<% row.each do |value| %>
			<td><%= value %></td>
		<% end %>
		</tr>
		<% end %>
	</tbody>
</table>

</div>


<% if (current_user.user_type == 'Doctor') %>
	<%= render 'doctor' %>
<% elsif (current_user.user_type == 'Patient') %>
	<%= render 'patient' %>
<% elsif (current_user.user_type == 'Pharmacist') %>
	<%= render 'pharmacist' %>
<% end %>
			