    <%= label_tag("eTime", "End time:") %> 
    <%= text_field_tag "eTime" %> </br>
   <p>
    <%= submit_tag 'Submit' %>
   </p>
  <% end %>


  <%= form_tag(qD8_path, :method=>'post') do %>
   <h3>View patient's information:</h3>
    <%= label_tag("ccNum", "Care card number:") %> 
    <%= text_field_tag "ccNum" %> </br>
   <p>
    <%= submit_tag 'Submit' %>
   </p>
  <% end %>


  <%= form_tag(qD9_path, :method=>'post') do %>
   <h3>View patient's prescriptions:</h3>
