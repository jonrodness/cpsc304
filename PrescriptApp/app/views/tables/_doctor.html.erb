

<div class = "panel container">

<div class='text-center'>
  <h1>Doctor Options</h1>
  <div class='row-line'></div>

  <%= form_tag(qD1_path, :method=>'post') do %>
   <h3>Update personal information:</h3>
    <%= label_tag("dFName", "First Name:") %> 
    <%= text_field_tag "dFName" %> </br>
    <%= label_tag("dLName", "Last Name:") %> 
    <%= text_field_tag "dLName" %> </br>
    <%= label_tag("dAddress", "Address:") %> 
    <%= text_field_tag "dAddress" %> </br>
    <%= label_tag("dPhoneNum", "Phone Number:") %> 
    <%= text_field_tag "dPhoneNum" %> </br>
    <%= label_tag("dSpecialty", "Specialty:") %> 
    <%= text_field_tag "dSpecialty" %> </br>
   <p>
    <%= submit_tag 'Submit' %>
   </p>
  <% end %>

  <%= form_tag(qD2_path, :method=>'post') do %>
   <h3>Prescribe a Drug:</h3>
    <%= label_tag("prescription", "Prescription number:") %> 
    <%= text_field_tag "prescription" %> </br>
    <%= label_tag("refills", "Number of refills:") %> 
    <%= text_field_tag "refills" %> </br>
    <%= label_tag("dosage", "Dosage:") %> 
    <%= text_field_tag "dosage" %> </br>
    <%= label_tag("ccNum", "Patient Care card number:") %> 
    <%= text_field_tag "ccNum" %> </br>
   <p>
    <%= submit_tag 'Submit' %>
   </p>
  <% end %>

  <br>

  <h3>Find pharmacies that are currently open (Weekday)</h3>
  <%= button_to "Go!", qD3_path, :class => "button", :method => :get %>
  <br>

  <h3>Find pharmacies that are currently open (Weekend)</h3>
  <%= button_to "Go!", qD4_path, :class => "button", :method => :get %>
  <br>

  <h3>View Appointments for picked date and time</h3>
  <%= button_to "Go!", qD5_path, :class => "button", :method => :get %>
  <br>

  <%= form_tag(qD6_path, :method=>'post') do %>
   <h3>View Appointments on a certain date:</h3>
    <%= label_tag("date", "Date:") %> 
    <%= text_field_tag "date" %> </br>
   <p>
    <%= submit_tag 'Submit' %>
   </p>
  <% end %>


  <%= form_tag(qD7_path, :method=>'post') do %>
