  <%= button_to "Go!", qD15_path, :class => "button", :method => :get %>
  <br>

  <%= form_tag(qD16_path, :method=>'post') do %>
   <h3>View patients who have been prescribed a drug from a specific company:</h3>
    <%= label_tag("cName", "Company name:") %> 
